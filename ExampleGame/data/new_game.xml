		<bg_image file="graphics\new_game\back.bmp" transparency="255,0,255" location="0,0"/>
		<shadow file="graphics\new_game\shadow.bmp" transparency="255,0,255" location="76,96"/>
		<image file="graphics\new_game\rival.bmp" transparency="255,0,255" location="100,30"/>

		<dialog text="...Er, was it {RIVALNAME}?"/>
		<dialog text="That's right! I remember now!$$His name is {RIVALNAME}!"/>
	</screen>
	
	<screen>
		<bg_image file="graphics\new_game\back.bmp" transparency="255,0,255" location="0,0"/>
		<shadow file="graphics\new_game\shadow.bmp" transparency="255,0,255" location="76,96"/>
		<image file="graphics\new_game\{0}.bmp" option="GENDER" transparency="255,0,255" location="100,25"/>

		<dialog text="{PLAYERNAME}!"/>
		<dialog text="Your very own Pokemon legend is about to$$unfold!"/>
