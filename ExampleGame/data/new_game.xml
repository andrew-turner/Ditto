		<dialog text="Let's begin with your name.$$What is it?"/>
	</screen>

	<inputscreen type="input" option="PLAYERNAME" text="Your name?" anim="graphics\textinput\{GENDER}_anim.bmp"/>
	
	<screen>
		<bg_image file="graphics\new_game\back.bmp" transparency="255,0,255" location="0,0"/>
		<shadow file="graphics\new_game\shadow.bmp" transparency="255,0,255" location="76,96"/>
		<image file="graphics\new_game\{0}.bmp" option="GENDER" transparency="255,0,255" location="100,25"/>

		<dialog text="Right...$$So your name is {PLAYERNAME}."/>
	</screen>
	
